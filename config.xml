<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="br.com.bossacriativa.transparenciajp" version="1.1.1">

    <name>Transparência JP</name>

    <description> Fique por dentro os gastos e receitas públicas da prefeitura Municipal de João Pessoa </description>

    <author email="contato@bossacriativa.com.br" href="http://www.bossacriativa.com.br">Bossa Criativa</author>

    <gap:splash gap:density="ldpi" gap:platform="android" src="res/screen/android/screen-ldpi-portrait.png"/>
    <gap:splash gap:density="mdpi" gap:platform="android" src="res/screen/android/screen-mdpi-portrait.png"/>
    <gap:splash gap:density="hdpi" gap:platform="android" src="res/screen/android/screen-hdpi-portrait.png"/>
    <gap:splash gap:density="xhdpi" gap:platform="android" src="res/screen/android/screen-xhdpi-portrait.png"/>

    <gap:splash height="480" src="res/screen/ios/Default.png" width="320"/>
    <gap:splash height="960" src="res/screen/ios/Default_at_2x.png" width="640"/>
    <gap:splash height="1136" src="res/screen/ios/Default_iphone5.png" width="640"/>

    <icon src="res/icon/ios/icon_57.png"/>

    <icon gap:platform="ios" height="57" src="res/icon/ios/icon_57.png" width="57"/>
    <icon gap:platform="ios" height="72" src="res/icon/ios/icon_72.png" width="72"/>
    <icon gap:platform="ios" height="114" src="res/icon/ios/icon_57_at_2x.png" width="114"/>
    <icon gap:platform="ios" width="144" src="res/icon/ios/icon_72_at_2x.png" height="144" />
    <icon gap:platform="ios" width="76" src="res/icon/ios/icon_76.png" height="76" />
    <icon gap:platform="ios" width="152" src="res/icon/ios/icon_76_at_2x.png" height="152" />
    <icon gap:platform="ios" width="120" src="res/icon/ios/icon_120.png" height="120" />

    <icon gap:density="ldpi" gap:platform="android" src="res/icon/android/icon-36-ldpi.png"/>
    <icon gap:density="mdpi" gap:platform="android" src="res/icon/android/icon-48-mdpi.png"/>
    <icon gap:density="hdpi" gap:platform="android" src="res/icon/android/icon-72-hdpi.png"/>
    <icon gap:density="xhdpi" gap:platform="android" src="res/icon/android/icon-96-xhdpi.png"/>

    <preference name="permissions" value="none"/>

    <feature name="http://api.phonegap.com/1.0/network"/>
    
    <gap:platform name="android"/>
    <gap:platform name="ios"/>
    
    <preference name="phonegap-version" value="3.3.0"/>
    <preference name="android-minSdkVersion" value="5"/>
    
    <preference name="orientation" value="portrait"/>
    <preference name="target-device" value="handset"/>
    <preference name="prerendered-icon" value="true"/>
    <preference name="exit-on-suspend" value="true"/>
    <preference name="android-installLocation" value="auto"/>
    <preference name="splash-screen-duration" value="12000"/>
    
    <gap:plugin name="org.apache.cordova.dialogs"/>
    <gap:plugin name="org.apache.cordova.network-information"/>
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.device" />
    
    <gap:plugin name="nl.x-services.plugins.socialsharing" version="3.3" />
    
    <access origin="*"/>

</widget>
